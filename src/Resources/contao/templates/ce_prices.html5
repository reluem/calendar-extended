                                                 title="<?= \Date::parse('d.m.Y H:i',
                                                     $item['price_valid_until']); ?>">
                                                bis <?= \Date::parse('d.m.Y',
                                                    $item['price_valid_until']); ?></div>
                                            <?php $active = $item['price_valid_until']; ?>
                                        <?php else: ?>
                                            <div class="uk-label uk-label-warning"
                                                 title="<?= \Date::parse('d.m.Y H:i',
                                                     $item['price_valid_until']); ?>">abgelaufen
                                            </div>
                                        <?php endif; ?>
                                    <?php endif; ?>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            </li>
        <?php endforeach; ?>
    </ul>
